<p id="notice"><%= notice %></p>

<h1>Coaches</h1>

<table>
  <thead>
    <tr>
	  <th><center>ID</th>
      <th><center>Name</th>
      <th><center>Short Description</th>
      <th><center>Coach Type</th>
	  <th><center>Day Rate</th>
	  <th><center>Image</th>
	  <th><center>Vacant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
		<td><center><%= coach.id%></td>
        <td><center><%= coach.name %></td>
        <td><center><%= coach.shortdesc %></td>
        <td><center><%= coach.coachtype %></td>
		<td><center><%= coach.dayrate %></td>
		<td><center><%= image_tag(coach.coachphoto.variant(resize_to_limit: [100,100])) if coach.coachphoto.attached?%></td>
		<td><center><%= coach.vacant %></td>
        <td><%= link_to 'Show', coach %></td>
        <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
        <td><%= link_to 'Destroy', coach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coach', new_coach_path %>
